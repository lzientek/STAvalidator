<Page x:Class="MP22NET.WpfFrontEnd.Vue.Pages.ValidationPageChoixProf"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:vue="clr-namespace:MP22NET.WpfFrontEnd.Vue"
      mc:Ignorable="d" 
	Title="ValidationPageChoixProf">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <TextBlock Text="Choix du futur STA" FontSize="24" Foreground="DodgerBlue" />
        
        <ListBox Grid.Row="1" ItemsSource="{Binding Source={StaticResource Data},Path=Teachers}"
                     Name="ListBoxTeachers" MaxWidth="500" HorizontalAlignment="Center" SelectionMode="Single" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <vue:TeacherView AffichageLevel="4" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <Button Grid.Row="2" Content="Valider" Click="ButtonValider_OnClick" HorizontalAlignment="Right" Margin="0,0,100,0" />
    </Grid>
</Page>
