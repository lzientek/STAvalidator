        <ListBox Grid.Row="1" Grid.Column="0" 
                 ItemsSource="{Binding Source={StaticResource Data},Path=Courses}"
                 Margin="2,0" 
                 IsEnabled="{Binding Source={StaticResource Data},
                                Path=IsInRecheche,Converter={StaticResource NotConverter}}"
                 BorderThickness="0" Name="ListBoxCourses">
            <ListBox.Resources>
                <ContextMenu x:Key="ContextMenu" >
                    <MenuItem Header="Supprimer" Click="ButtonSupprimerMatiere_OnClick"/>
                    <MenuItem Header="Ajouter une matieres" Click="ButtonAjouterMatiere_OnClick"/>
                </ContextMenu>

                <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource {x:Type ListBoxItem}}">
                    <Setter Property="ContextMenu" Value="{StaticResource ContextMenu}"/>
                </Style>
            </ListBox.Resources>
            <ListBox.ItemTemplate>
                <!--template Course-->
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Id,StringFormat='[{0}]'}" Margin="2"
                                   FontWeight="Bold" FontSize="17" VerticalAlignment="Bottom" />
                        <TextBlock Text="{Binding Name}" FontSize="16" VerticalAlignment="Bottom" Margin="5,2" />
                    </StackPanel>

                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

