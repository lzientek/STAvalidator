            <ListBox.Resources>
                <ContextMenu x:Key="ContextMenu" >
                    <MenuItem Header="Supprimer" Click="ButtonSupprimerQuestion_OnClick"
                               IsEnabled="{Binding Source={StaticResource Data},
                                Path=IsInRecheche,Converter={StaticResource NotConverter}}"/>
                    <MenuItem Header="Ajouter une question" Click="ButtonAjouterQuestion_OnClick"
