            <Grid.RowDefinitions>
                <RowDefinition MaxHeight="130"/>
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--modification cours-->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid DataContext="{Binding ElementName=ListBoxCourses,Path=SelectedItem}" 
                      IsEnabled="{Binding ElementName=ListBoxCourses,Path=SelectedIndex,
                    Converter={StaticResource SelectedIndexToBoolConverter}}">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>


                    <TextBlock FontSize="24" Foreground="DodgerBlue"
                           Text="Cours" Margin="5" Grid.ColumnSpan="2"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="5" HorizontalAlignment="Right"
                               Text="Id :" />

                    <TextBox Grid.Row="1" Name="TextBoxId" IsEnabled="False"
                             LostFocus="TextBoxId_OnLostFocus"
                             Grid.Column="1" Text="{Binding Id}" Margin="5" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Margin="5" HorizontalAlignment="Right"
                               Text="Nom :" />

                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Name}" Margin="5" />

                </Grid>

            </ScrollViewer>

            <!--modification question-->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <Grid DataContext="{Binding ElementName=ListBoxQuestion,Path=SelectedItem}"
                      IsEnabled="{Binding ElementName=ListBoxQuestion,Path=SelectedIndex,
                    Converter={StaticResource SelectedIndexToBoolConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="3*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock FontSize="24" Foreground="DodgerBlue"
                           Text="Question" Margin="5" Grid.ColumnSpan="2"/>



                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="5" HorizontalAlignment="Right"
                               Text="Question :" />
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Texte}" Margin="5" 
                             Height="50" AcceptsReturn="True" VerticalContentAlignment="Top" 
                             TextWrapping="Wrap" Name="TextBoxQuestion" />

                    <TextBlock Grid.Row="2" Grid.Column="0" Margin="5" HorizontalAlignment="Right"
                               Text="Type :" />
                    <ComboBox Grid.Row="2" Grid.Column="1" SelectedIndex="{Binding Type}" Margin="5" >
                        <ComboBoxItem>Bonus</ComboBoxItem>
                        <ComboBoxItem>Important</ComboBoxItem>
                    </ComboBox>
                </Grid>
            </ScrollViewer>

        </Grid>

